<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/inc/css/navbar.css">
    <link rel="stylesheet" href="/inc/css/dashboard.css" />
</head>
<body>
<%- include('partials/navbar') %>

<main class="dashboard">
    <header class="dashboard__header">
        <h1 class="dashboard__title">Dashboard</h1>
        <p class="dashboard__subtitle">Upcoming and completed orders linked to your account.</p>
    </header>

    <section class="panel" aria-labelledby="upcomingTitle">
        <div class="panel__head">
            <h2 id="upcomingTitle" class="panel__title">Upcoming Orders</h2>
            <div class="panel__meta">
                <span class="badge" id="upcomingCount">0</span>
            </div>
        </div>

        <div class="table-wrap">
            <table class="table" aria-label="Upcoming orders table">
                <thead>
                <tr>
                    <th scope="col">Order #</th>
                    <th scope="col">Salon</th>
                    <th scope="col">Booking date</th>
                </tr>
                </thead>

                <tbody id="upcomingOrdersBody">
                <tr>
                    <td colspan="3" class="table__empty">Loading upcoming orders…</td>
                </tr>
                </tbody>
            </table>
        </div>
    </section>

    <section class="panel" aria-labelledby="completedTitle">
        <div class="panel__head">
            <h2 id="completedTitle" class="panel__title">Completed Orders</h2>
            <div class="panel__meta">
                <span class="badge" id="completedCount">0</span>
            </div>
        </div>

        <div class="table-wrap">
            <table class="table" aria-label="Completed orders table">
                <thead>
                <tr>
                    <th scope="col">Order #</th>
                    <th scope="col">Salon</th>
                    <th scope="col">Booking date</th>
                </tr>
                </thead>

                <tbody id="completedOrdersBody">
                <tr>
                    <td colspan="3" class="table__empty">Loading completed orders…</td>
                </tr>
                </tbody>
            </table>
        </div>
    </section>

    <footer class="dashboard__footer">
        <span id="dashboardStatus" class="muted">Waiting for data…</span>
    </footer>
</main>

<script src="/inc/js/dashboard.js"></script>
</body>
</html>